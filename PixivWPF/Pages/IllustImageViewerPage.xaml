<Page x:Class="PixivWPF.Pages.IllustImageViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PixivWPF.Pages"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="IllustImageViewerPage">

    <Grid MouseWheel="Preview_MouseWheel">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Illust Preview -->
        <Viewbox Grid.Row="0" StretchDirection="DownOnly" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image x:Name="Preview" x:Uid="Preview" 
                   Stretch="None"
                   HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Uid="ActionSaveIllust" Header="Save Illust" Click="ActionSaveIllust_Click"/>
                    </ContextMenu>
                </Image.ContextMenu>
            </Image>
        </Viewbox>
        <!-- Illust Open Progress Prompt -->
        <mah:ProgressRing Grid.Row="0" Grid.RowSpan="3"
                          x:Name="PreviewWait"
                          Width="128" Height="128" Opacity="0.62" 
                          Foreground="{DynamicResource AccentColorBrush}"
                          Visibility="Hidden"
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
