<Window x:Class="ImageSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSearch"
        mc:Ignorable="d"
        Height="720" Width="1280" 
        AllowDrop="True" Drop="Window_Drop" DragEnter="Window_DragEnter" DragLeave="Window_DragLeave" DragOver="Window_DragOver"
        Title="Image Search By Image" 
        Loaded="Window_Loaded" Closing="Window_Closing" StateChanged="Window_StateChanged" 
        PreviewKeyUp="Window_PreviewKeyUp" PreviewKeyDown="Window_PreviewKeyDown" PreviewMouseUp="Window_PreviewMouseUp">
    <Window.Resources>
        <DataTemplate x:Key="ImageTile" DataType="local:ImageResultGallery" >
            <Grid x:Name="PART_IMAGEGRID" Width="240" Height="256" MaxWidth="240" MinHeight="256" Margin="4" ToolTip="{Binding Path=Tooltip, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="PART_IMAGEBOX" MaxWidth="240" MaxHeight="240" StretchDirection="DownOnly" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Image x:Name="PART_IMAGE" x:Uid="PART_IMAGE" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5"
                           Source="{Binding Path=Source, Mode=OneWay}">
                        <Image.LayoutTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="PART_ImageScale" ScaleX="1" ScaleY="1"/>
                                <RotateTransform x:Name="PART_ImageRotate" Angle="0" />
                            </TransformGroup>
                        </Image.LayoutTransform>
                    </Image>
                    <Viewbox.LayoutTransform>
                        <TransformGroup>
                            <RotateTransform x:Name="PART_ImageBoxRotate" Angle="0" />
                        </TransformGroup>
                    </Viewbox.LayoutTransform>
                </Viewbox>
                <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <StackPanel.Effect>
                        <DropShadowEffect BlurRadius="1" ShadowDepth="0" Direction="315" Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}" Opacity="0.75"/>
                    </StackPanel.Effect>
                    <TextBlock x:Name="PART_IMAGETAGED" x:Uid="PART_IMAGETAGED" Text="&#xE8EC;" FontFamily="{StaticResource SegoeIconFamily}" 
                           Margin="1" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{Binding HasExifTag, Mode=OneWay, Converter={StaticResource BoolToVis}}"/>
                    <TextBlock x:Name="PART_IMAGEFAVED" x:Uid="PART_IMAGEFAVED" Text="&#xEB51;" FontFamily="{StaticResource SegoeIconFamily}" 
                           Margin="1" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{Binding Favoriteed, Mode=OneWay, Converter={StaticResource BoolToVis}}"/>
                </StackPanel>
                <TextBlock Grid.Row="1" Grid.Column="0" x:Name="PART_IMAGEFILE" x:Uid="PART_IMAGEFILE" Text="{Binding Path=FileName, Mode=OneWay}" Margin="0,0,1,0" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PART_IMAGESIMILAR" x:Uid="PART_IMAGESIMILAR" Text="{Binding Path=Similar, Mode=OneWay}" Margin="1,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Window.Resources>
    
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="TaskbarState" x:Uid="TaskbarState" Description="" ProgressValue="0" ProgressState="None" >
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfoCollection>
                    <ThumbButtonInfo x:Name="TaskbarProgressBittonCompare" x:Uid="TaskbarProgressBittonCompare"
                        DismissWhenClicked="True"
                        CommandTarget="{Binding ElementName=CompareImage, Mode=OneWay}"
                        Description="Compare" Visibility="Collapsed" />
                    <ThumbButtonInfo x:Name="TaskbarProgressBittonQueryLabel" x:Uid="TaskbarProgressBittonQueryLabel"
                        DismissWhenClicked="True"
                        CommandTarget="{Binding ElementName=QueryImageLabel}"
                        Description="Labels" Visibility="Collapsed"/>
                    <ThumbButtonInfo x:Name="TaskbarProgressBittonQuery" x:Uid="TaskbarProgressBittonQuery"
                        DismissWhenClicked="True"
                        CommandTarget="{Binding ElementName=QueryImage}"
                        Description="Query" Visibility="Collapsed"/>
                </ThumbButtonInfoCollection>
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" x:Name="Tabs" Margin="4" TabStripPlacement="Bottom" >
            <TabItem x:Name="TabSimilar" x:Uid="TabSimilar" Header="Similar" >
                <Grid Grid.Column="0" x:Name="SimilarViewer">
                    <Grid.Background>
                        <ImageBrush ImageSource="pack://application:,,,/ImageSearch;component/Resources/checkerboard.png" TileMode="Tile" Opacity="0.10" ViewportUnits="Absolute" Viewport="0,0,32,32"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Grid.Column="0" x:Name="SimilarSrcBox" Width="256" StretchDirection="DownOnly" RenderTransformOrigin="0.5,0.5" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Image x:Name="SimilarSrc" x:Uid="SimilarSrc" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <Image.LayoutTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="SimilarSrcScale" ScaleX="1" ScaleY="1"/>
                                    <RotateTransform x:Name="SimilarSrcRotate" Angle="0" />
                                </TransformGroup>
                            </Image.LayoutTransform>
                        </Image>
                        <Viewbox.LayoutTransform>
                            <TransformGroup>
                                <RotateTransform x:Name="SimilarSrcBoxRotate" Angle="0" />
                            </TransformGroup>
                        </Viewbox.LayoutTransform>
                    </Viewbox>
                    <ListView Grid.Column="1" x:Name="SimilarResultGallery" BorderThickness="0" Background="Transparent"
                              Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              HorizontalContentAlignment="Left" VerticalContentAlignment="Top"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              Focusable="False" ClipToBounds="True" UseLayoutRounding="True" 
                              ItemTemplate="{StaticResource ImageTile}" 
                              SelectionChanged="SimilarResultGallery_SelectionChanged"
                              MouseMove="SimilarResultGallery_MouseMove"
                              MouseDoubleClick="SimilarResultGallery_MouseDoubleClick">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" 
                                   Grid.IsSharedSizeScope="True" UseLayoutRounding="True" 
                                   ScrollViewer.CanContentScroll="True" ClipToBounds="True" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabCompare" x:Uid="TabCompare" Header="Compare" PreviewKeyUp="Window_PreviewKeyUp">
                <Grid x:Name="CompareViewer">
                    <Grid.Background>
                        <ImageBrush ImageSource="pack://application:,,,/ImageSearch;component/Resources/checkerboard.png" TileMode="Tile" Opacity="0.10" ViewportUnits="Absolute" Viewport="0,0,32,32"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition Width=".5*"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Grid.Column="0" x:Name="CompareBoxL" StretchDirection="DownOnly" RenderTransformOrigin="0.5,0.5" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Image x:Name="CompareL" x:Uid="Compare" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <Image.LayoutTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="CompareScaleL" ScaleX="1" ScaleY="1"/>
                                    <RotateTransform x:Name="CompareRotateL" Angle="0" />
                                </TransformGroup>
                            </Image.LayoutTransform>
                        </Image>
                        <Viewbox.LayoutTransform>
                            <TransformGroup>
                                <RotateTransform x:Name="CompreBoxRotateL" Angle="0" />
                            </TransformGroup>
                        </Viewbox.LayoutTransform>
                    </Viewbox>
                    <Viewbox Grid.Column="1" x:Name="CompareBoxR" StretchDirection="DownOnly" RenderTransformOrigin="0.5,0.5" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Image x:Name="CompareR" x:Uid="Compare" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <Image.LayoutTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="CompareScaleR" ScaleX="1" ScaleY="1"/>
                                    <RotateTransform x:Name="CompareRotateR" Angle="0" />
                                </TransformGroup>
                            </Image.LayoutTransform>
                        </Image>
                        <Viewbox.LayoutTransform>
                            <TransformGroup>
                                <RotateTransform x:Name="CompreBoxRotateR" Angle="0" />
                            </TransformGroup>
                        </Viewbox.LayoutTransform>
                    </Viewbox>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabLog" x:Uid="TabLog" Header="Log">
                <TextBox x:Name="edResult" x:Uid="edResult" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabItem>
        </TabControl>
        <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FlowDirection="LeftToRight">
            <CheckBox x:Name="AllFolders" x:Uid="AllFolders" Content="All Folders" DockPanel.Dock="Left" 
                      Margin="4" HorizontalAlignment="Left" VerticalAlignment="Stretch" VerticalContentAlignment="Center" 
                      Checked="AllFolders_Checked" Unchecked="AllFolders_Checked" />
            <ComboBox x:Name="FolderList" x:Uid="FolderList" IsEditable="False" DockPanel.Dock="Left" MinWidth="32"
                      Margin="4" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionChanged="FolderList_SelectionChanged"/>
            <CheckBox x:Name="OpenInShell" x:Uid="OpenInShell" Content="Open Results In Shell" IsChecked="False" DockPanel.Dock="Left" Visibility="Collapsed"
                      Margin="4" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBlock x:Name="QueryResultLimitLabel" x:Uid="QueryResultLimitLabel" Text="Results: " Margin="4" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <ComboBox x:Name="QueryResultLimit" x:Uid="QueryResultLimit" Text="10" IsEditable="False" DockPanel.Dock="Left" MinWidth="22"
                      Margin="4" HorizontalAlignment="Left" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            <ToggleButton x:Name="DarkBG" x:Uid="DarkBG" Margin="4" Width="22" IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Stretch" Click="DarkBG_Click">
                <ToggleButton.Content>
                    <TextBlock x:Uid="DarkBGIcon" Text="&#xE793;" Margin="1,1,0,0" Style="{DynamicResource MenuItemIcon}"/>
                </ToggleButton.Content>
            </ToggleButton>
            <ToggleButton x:Name="AlwaysOnTop" x:Uid="AlwaysOnTop" Margin="4" Width="22" IsChecked="False" 
                          ToolTip="Always On Top" HorizontalAlignment="Right" Click="AlwaysOnTop_Click">
                <ToggleButton.Content>
                    <TextBlock x:Uid="AlwaysOnTopIcon" Text="&#xE840;" Margin="1,1,0,0" Style="{DynamicResource MenuItemIcon}"/>
                </ToggleButton.Content>
            </ToggleButton>
            <CheckBox x:Name="IsQueryRotatedImage" x:Uid="IsQueryRotatedImage" Content="Rotated Image?" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="IsQueryRotatedImage_Checked" Unchecked="IsQueryRotatedImage_Checked"/>
            <Button x:Name="PasteFilesFilter" x:Uid="PasteFilesFilter" Width="22" Margin="4" Click="PasteFilesFilter_Click" 
                    ToolTip="Paste To Filter Files" HorizontalAlignment="Center" VerticalAlignment="Stretch">
                <Button.Content>
                    <TextBlock x:Uid="PasteFilesFilterIcon" Text="&#xE133;" Margin="1,1,0,0" Style="{DynamicResource MenuItemIcon}"/>
                </Button.Content>
            </Button>
            <Button x:Name="ClearFilesFilter" x:Uid="ClearFilesFilter" Width="22" Margin="2,4,4,4" Click="ClearFilesFilter_Click" 
                    ToolTip="Clear Filter Files" HorizontalAlignment="Center" VerticalAlignment="Stretch">
                <Button.Content>
                    <TextBlock x:Uid="ClearFilesFilterIcon" Text="&#xE107;" Margin="1,1,0,0" Style="{DynamicResource MenuItemIcon}"/>
                </Button.Content>
            </Button>
            <TextBlock x:Name="ResultFilterLabel" x:Uid="ResultFilterLabel" Text="Filter:" Margin="4" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBox x:Name="ResultFilter" x:Uid="ResultFilter" Margin="4" MinWidth="160" TextChanged="ResultFilter_TextChanged"
                     HorizontalAlignment="Left" VerticalAlignment="Stretch" TextAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBlock x:Name="LatestMessage" x:Uid="LatestMessage"  Text=" " Width="auto" DockPanel.Dock="Right" 
                       Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                       TextAlignment="Right" TextTrimming="WordEllipsis" TextWrapping="NoWrap" 
                       ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </DockPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" FlowDirection="LeftToRight">
            <Button x:Name="DBMake" x:Uid="DBMake" Width="72" Margin="4" Content="Make DB" Click="DBTools_Click">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="DBLoad" x:Uid="DBLoad" Header="Load Feature Database" Click="DBTools_Click"/>
                        <Separator/>
                        <MenuItem x:Name="DBCancel" x:Uid="DBCancel" Header="Cancel Make Feature Database" Click="DBTools_Click"/>
                        <Separator/>
                        <MenuItem x:Name="DBUpdate" x:Uid="DBUpdate" Header="Update Feature Database for Selected Image" Click="DBTools_Click"/>
                        <Separator/>
                        <MenuItem x:Name="DBClean" x:Uid="DBClean" Header="Clean Feature Database" Click="DBTools_Click"/>
                        <MenuItem x:Name="DBMerge" x:Uid="DBMerge" Header="Merge Feature Database" Click="DBTools_Click"/>
                        <MenuItem x:Name="DBChangePath" x:Uid="DBChangePath" Header="Change Feature Database Path" Click="DBTools_Click"/>
                        <MenuItem x:Name="DBRemove" x:Uid="DBRemove" Header="Remove Feature Database" Click="DBTools_Click" Visibility="Collapsed"/>
                        <MenuItem x:Name="DBAdd" x:Uid="DBAdd" Header="Add New Feature Database" Click="DBTools_Click" Visibility="Collapsed"/>
                        <Separator/>
                        <MenuItem x:Name="ClassifyImageByYear" x:Uid="ClassifyImageByYear" Header="Classify Image By Year" Click="DBTools_Click" Visibility="Collapsed"/>
                        <Separator/>
                        <MenuItem x:Name="SaveDefaultLabels" x:Uid="SaveDefaultLabels" Header="Save Default Labels List To File" Click="DBTools_Click"/>
                        <MenuItem x:Name="LoadLocaleLabels" x:Uid="LoadLocaleLabels" Header="Load Locale Labels List From File" Click="DBTools_Click"/>
                        <Separator/>
                        <MenuItem x:Name="ClearLog" x:Uid="ClearLog" Header="Clear Logs" Click="DBTools_Click"/>
                        <MenuItem x:Name="SaveLog" x:Uid="SaveLog" Header="Save Logs" Click="DBTools_Click"/>
                        <Separator/>
                        <MenuItem x:Name="ShellSearchWin" x:Uid="ShellSearchWin" Header="Shell Search Window" Click="DBTools_Click"/>
                        <Separator/>
                        <MenuItem x:Name="OpenConfig" x:Uid="OpenConfig" Header="Open Config File" Click="DBTools_Click"/>
                        <MenuItem x:Name="LoadConfig" x:Uid="LoadConfig" Header="Load Config File" Click="DBTools_Click"/>
                        <MenuItem x:Name="SaveConfig" x:Uid="SaveConfig" Header="Save Config File" Click="DBTools_Click"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </StackPanel>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="EditQueryFile" x:Uid="EditQueryFile" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center"/>
        <StackPanel Grid.Row="2" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="QueryImage" x:Uid="QueryImage" Click="QueryImage_Click" Width="72" Margin="4" Content="Query" ToolTip="Query Images By Image"  />
            <Button x:Name="QueryImageLabel" x:Uid="QueryImageLabel" Click="QueryImageLabel_Click" Width="72" Margin="4" Content="Labels" ToolTip="Query Image Labels" />
            <Button x:Name="CompareImage" x:Uid="CompareImage" Click="CompareImage_Click" Width="72" Margin="4" Content="Compare" ToolTip="Compare Images" />
        </StackPanel>
        <ProgressBar Grid.Row="3" Grid.ColumnSpan="3" x:Name="progress" x:Uid="progress" Height="4" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Value="100" />
    </Grid>
</Window>
